<% content_for :title, "Espace professionel" %>
<% content_for :meta_description, "Page d'informations de l'utilisateur." %>

<h1 class="h1-resto"> BIENVENUE DANS VOTRE ESPACE PROFESSIONNEL </h1>

<div class="admin-prof">
      <div class="profile-card">
        <div class="photo-profil">
          <%= image_tag "profil.png" , alt: "Photo de profil" %> 
        </div>

        <div class="input-container-profile <%= 'active' if @admin.email.present? %>">
            <label for="input" class="label-profile">Email</label>
            <input type="text" id="input" required="" readonly value="<%= @admin.email %>">
            <div class="underline"></div>
        </div>

        <div class="btn-edit-container">
          <%= link_to 'Editer le profil' , edit_admin_registration_path, class:"btn btn-edit" %>
        </div>
      </div>
  </div>
</div>

<div class="ag-courses_item d-flex justify-content-center">
  <a class="ag-courses-item_link" href="<%= new_restaurant_path %>">
    <div class="ag-courses-item_bg"></div>
    <div class="ag-courses-item_title">
      AJOUTER MON RESTAURANT
    </div>
    <div class="ag-courses-item_date-box">
      <i class="far fa-plus-square text-center mr-2 card-img-top" style="font-size: 50px; color: #f36c01"></i>
    </div>
  </a>
</div>
 
<h3 class="h3-edit">RÉSERVATIONS DANS VOTRE ÉTABLISSEMENT</h3>
<div class="mx-4 my-4">
  <% @reservations.each do |reservation| %>
    <div class="comment-user p-2 mb-4">
      <p>Réservation par <%= reservation.user.email %> pour <%= reservation.number %> personnes, le <%= reservation.date.strftime("%d/%m/%Y") %> à <%= reservation.time.strftime("%H:%M") %></p>
      <%= button_to "Supprimer", restaurant_reservation_path(reservation.restaurant, reservation), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer cette réservation ?" }, class: "btn btn-danger" %>
    </div>
  <% end %>
</div>