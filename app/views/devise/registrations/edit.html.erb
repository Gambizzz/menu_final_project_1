<% content_for :title, "Éditer les informations" %>
<% content_for :meta_description, "Page d'édition de mail et mot de passe." %>

<div class="coontainer">
  <div class="input-container-edit">
    <h1 class="h1-resto">Éditer</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="input-container-edit">
        <label for="email" class="text-edit">Email</label>
        <%= f.email_field :email, class: "form-control-edit", id: "email" %>
        <div class="underline"></div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input-container-edit">
        <%= f.label "Mot de passe", class: "text-edit" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control-edit" %>
        <% if @minimum_password_length %>
          <em class="text-edit"> <%= @minimum_password_length %> caractères minimum </em>
        <% end %>
      </div>

      <div class="input-container-edit">
        <%= f.label "Confirmer le mot de passe", class: "text-edit" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-edit" %>
        <div class="underline-edit"></div>
      </div>

      <div class="input-container-edit">
        <%= f.label "Mot de passe actuel", class: "text-edit" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control-edit" %>
        <div class="underline-edit"></div>
      </div>

      <div class="actions-edit">
        <%= f.submit "Mettre à jour", class: "btn btn-edit" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous êtes sûr?", turbo_confirm: "Vous êtes sûr?" }, method: :delete, class: "btn btn-cancel ms-4" %>
    </div>
  </div>
  <%= link_to "Retour", root_path, class: "btn btn-back" %>
</div>
