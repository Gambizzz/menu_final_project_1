<div class="container">
  <header class="d-flex justify-content-around py-3 flex-wrap">
    <ul class="nav category-nav">
      <li class="nav-item"><%= link_to "RESTAURANTS", restaurants_path, class: "navnav nav-link navbar-text navbar-text-lg" %></li>
    </ul>
   
    <ul class="nav">
      <li class="nav-item">
        <%= link_to image_tag("LOGO_2.png", alt: "Logo", class: "navnav navbar-brand img-fluid logo-img"), root_path, class: "nav-link" %>
      </li>
    </ul>
    
    <% if user_signed_in? || admin_signed_in? %>
      <div class="btn-group category-nav">
        <a class="dropdown-toggle navnav-out navbar-text navbar-text-lg-out category-nav" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <% if current_admin %>
            MON ESPACE PRO
          <% elsif current_user %>
            MON ESPACE CLIENT
          <% end %>
        </a>

        <ul class="dropdown-menu">
          <li class="nav-item">
            <% if current_admin %>
              <%= link_to "MON ESPACE PRO", admin_path(current_admin), class: "navnav-hover navbar-text" %>
            <% elsif current_user %>
              <%= link_to "MON ESPACE CLIENT", user_path(current_user), class: "navnav-hover navbar-text" %>
            <% end %>
          </li>

          <li class="nav-item">
            <% if current_admin %>
              <%= link_to "ÉDITER MES INFOS", edit_admin_registration_path, class: "navnav-hover navbar-text" %>
            <% elsif current_user %>
              <%= link_to "ÉDITER MES INFOS", edit_user_registration_path, class: "navnav-hover navbar-text" %>
            <% end %>
          </li>

          <li class="nav-item">
            <% if current_admin %>
              <%= button_to "ME DÉCONNECTER", destroy_admin_session_path, class: "navnav-out navbar-text btn-logout", method: :delete, data: {turbo_method: :delete} %>
            <% elsif current_user %>
              <%= button_to "ME DÉCONNECTER", destroy_user_session_path, class: "navnav-out navbar-text btn-logout", method: :delete, data: {turbo_method: :delete} %>
            <% end %>
          </li>
        </ul>
      </div>

    <% else %>
      <ul class="nav">
        <li class="nav-item">
          <a class="dropdown-toggle navnav nav-link navbar-text navbar-text-lg" href="" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            SE CONNECTER
          </a>

          <ul class="dropdown-menu">
            <li class="nav-item">
              <%= link_to "CLIENT", new_user_session_path , class: "navnav-hover navbar-text navbar-text-sm" %>
            </li>
            <li class="nav-item">
              <%= link_to "PROFESSIONNEL", new_admin_session_path , class: "navnav-hover navbar-text navbar-text-sm" %>
            </li>
          </ul>
        </li>
      </ul>
    <% end %>
  </header>
</div>
